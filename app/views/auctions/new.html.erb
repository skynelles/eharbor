<h1>New Auction</h1>

<%= form_for @auction do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>

  <p>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<p class="btn"><%= link_to "Back", auctions_path %></p>